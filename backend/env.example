# PhishNetra Configuration
# Copy this file to .env and modify as needed

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Model Configuration
MODEL_CACHE_DIR=./models
FASTTEXT_MODEL_PATH=./models/fasttext_scam.bin
SENTENCE_TRANSFORMER_MODEL=all-MiniLM-L6-v2
DISTILBERT_MODEL_PATH=./models/distilbert_scam
FAISS_INDEX_PATH=./models/scam_index.faiss

# Inference Configuration
MAX_SEQUENCE_LENGTH=512
BATCH_SIZE=16
INFERENCE_TIMEOUT=30.0

# Decision Fusion Weights (should sum to 1.0)
FASTTEXT_WEIGHT=0.25
SENTENCE_TRANSFORMER_WEIGHT=0.30
DISTILBERT_WEIGHT=0.35
SIMILARITY_WEIGHT=0.10

# Similarity Engine Configuration
SIMILARITY_THRESHOLD=0.85
MAX_SIMILAR_RESULTS=5
FAISS_NPROBE=10

# Explainability Configuration
HIGHLIGHT_TOP_K=3
MIN_CONFIDENCE_THRESHOLD=0.1

# Performance Configuration
ENABLE_GPU=false
GPU_MEMORY_FRACTION=0.7
ENABLE_MODEL_CACHING=true

# Security & Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_ACCESS_LOGS=true

# Environment
ENVIRONMENT=development
DEBUG_MODE=false

# CORS Configuration (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Database (for future use)
# DATABASE_URL=postgresql://user:password@localhost/riskanalyzer