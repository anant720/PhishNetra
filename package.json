{
  "name": "phishnetra-monorepo",
  "version": "1.0.0",
  "description": "PhishNetra - Advanced AI-powered scam detection system",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:frontend": "cd apps/frontend && npm run dev",
    "dev:backend": "cd apps/backend && python main.py",
    "build:frontend": "cd apps/frontend && npm run build",
    "start:backend": "cd apps/backend && python main.py",
    "install:all": "npm install && cd apps/frontend && npm install && cd ../backend && pip install -r requirements.txt",
    "clean": "rm -rf apps/*/node_modules apps/backend/__pycache__ apps/backend/**/*.pyc"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/anant720/PhishNetra.git"
  },
  "keywords": [
    "ai",
    "scam-detection",
    "fraud-analysis",
    "machine-learning",
    "nextjs",
    "fastapi"
  ],
  "author": "Anant Suthar",
  "license": "MIT"
}